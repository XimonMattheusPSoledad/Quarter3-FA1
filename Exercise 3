<script>
    let nickname = "Gilan";
let heightInInches = 62;
let weightInKg = 90;


let feet = Math.floor(heightInInches / 12);
let inches = heightInInches % 12;

let weightInLbs = (weightInKg * 2.20462).toFixed(3);

  const userConsent = confirm("Do you agree to share your personal information with this site?");

  if (userConsent) {
    alert("Name: " + nickname + "\nHeight: " + feet + "’" + inches + "”\nWeight: " + weightInLbs + " lbs");
  } else {
    console.log("User does not wish to share his/her information.");
  }
</script>
